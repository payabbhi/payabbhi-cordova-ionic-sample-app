<?xml version='1.0' encoding='utf-8'?>
<widget id="com.payabbhi.demo" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>PayabbhiDemo</name>
    <description>
        Sample Cordova app using Payabbhi Cordova Plugin.
    </description>
    <author email="support@payabbhi.com" href="https://payabbhi.com">
        Payabbhi
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="mdpi" src="res/icon/android/icon-mdpi.png" />
        <icon density="hdpi" src="res/icon/android/icon-hdpi.png" />
        <icon density="xhdpi" src="res/icon/android/icon-xhdpi.png" />
        <icon density="xxhdpi" src="res/icon/android/icon-xxhdpi.png" />
        <icon density="xxxhdpi" src="res/icon/android/icon-xxxhdpi.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />

        <!-- App Icons -->
        <!-- iPhone-->
        <icon height="180" width="180" src="res/icon/ios/icon-60@3x.png"/>
        <icon height="120" width="120" src="res/icon/ios/icon-60@2x.png"/>

        <!-- iPad Pro	167px × 167px (83.5pt × 83.5pt @2x)-->
        <icon height="167" width="167" src="res/icon/ios/icon-83.5@2x.png"/>

        <!-- iPad, iPad mini	152px × 152px (76pt × 76pt @2x) -->
        <icon height="152" width="152" src="res/icon/ios/icon-76@2x.png"/>

        <!-- App Store	1024px × 1024px (1024pt × 1024pt @1x) -->
        <icon height="1024" width="1024" src="res/icon/ios/icon-1024.png"/>

        <!-- Spotlight Icons -->
        <!--iPhone	120px × 120px (40pt × 40pt @3x) -->
        <icon height="120" width="120" src="res/icon/ios/icon-40@3x.png"/>

        <!--iPhone	80px × 80px (40pt × 40pt @2x) -->
        <!-- iPad Pro, iPad, iPad mini	80px × 80px (40pt × 40pt @2x) -->
        <icon height="80" width="80" src="res/icon/ios/icon-40@2x.png"/>


        <!-- Settings icons -->
        <!--iPhone	87px × 87px (29pt × 29pt @3x) -->
        <icon height="87" width="87" src="res/icon/ios/icon-29@3x.png"/>

        <!--iPhone	58px × 58px (29pt × 29pt @2x) -->
        <!--iPad Pro, iPad, iPad mini	58px × 58px (29pt × 29pt @2x) -->
        <icon height="58" width="58" src="res/icon/ios/icon-29@2x.png"/>


        <!-- Notification icons-->
        <!-- iPhone	60px × 60px (20pt × 20pt @3x) -->
        <icon height="60" width="60" src="res/icon/ios/icon-20@3x.png"/>
        <!-- iPhone	40px × 40px (20pt × 20pt @2x) -->
        <!-- iPad Pro, iPad, iPad mini	40px × 40px (20pt × 20pt @2x)-->
        <icon height="40" width="40" src="res/icon/ios/icon-20@2x.png"/>

    </platform>
    <engine name="browser" spec="^5.0.4" />
</widget>
